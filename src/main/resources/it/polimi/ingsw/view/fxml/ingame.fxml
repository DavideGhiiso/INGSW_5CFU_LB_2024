<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.Pane?>
<StackPane prefHeight="720.0"
           prefWidth="1280.0"
           xmlns="http://javafx.com/javafx/21"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="it.polimi.ingsw.controller.viewcontroller.InGameController"
           stylesheets="@../css/ingame.css"
           styleClass="main-scene">
   <VBox alignment="CENTER"
         styleClass="vbox-wrapper">
      <VBox alignment="CENTER_LEFT"
            styleClass="top-pane-wrapper">
         <StackPane>
            <HBox alignment="CENTER" styleClass="top-label-wrapper">
               <Label styleClass="top-label" fx:id="team1Label">
                  Team1
               </Label>
               <Label styleClass="top-label" fx:id="scoreLabel">
                  Punteggio
               </Label>
               <Label styleClass="top-label" fx:id="team2Label">
                  Team2
               </Label>
            </HBox>
            <HBox alignment="CENTER_LEFT" styleClass="top-pane">
               <padding>
                  <Insets left="30.0"/>
               </padding>
               <Button text="&#9776;" styleClass="button-clickable, button-menu" onAction="#onMenuButtonClicked"/>
               <Label fx:id="usernameLabel" >Username</Label>
            </HBox>
         </StackPane>
      </VBox>
      <HBox alignment="CENTER"
            VBox.vgrow="ALWAYS" fx:id="centralPane" styleClass="central-pane">
      </HBox>
      <VBox>
         <StackPane styleClass="bottom-pane-container">
            <HBox styleClass="bottom-pane"
                  fx:id="bottomPane">
               <padding>
                  <Insets bottom="20.0"/>
               </padding>
            </HBox>
            <StackPane alignment="CENTER_RIGHT" pickOnBounds="false">
               <padding>
                  <Insets right="30.0"/>
               </padding>
               <Button styleClass="button-clickable, play-button"
                       onAction="#onPlayCardButtonClick"
                       fx:id="playCardButton"
                       visible="false">
                  Gioca
               </Button>
            </StackPane>
         </StackPane>
      </VBox>
   </VBox>
   <VBox alignment="CENTER"
         visible="false"
         fx:id="popup"
         styleClass="popup-bg">
      <VBox styleClass="popup">
         <Button styleClass="button-clickable, back-popup-button"
                 onAction="#onClosePopupClick">
            âœ–
         </Button>
         <VBox alignment="CENTER">
            <Label wrapText="true"
                   textAlignment="CENTER">
               Menu
            </Label>
            <Button onAction="#onExitGameButtonClick">
               Esci dal gioco
            </Button>
         </VBox>
      </VBox>
   </VBox>
</StackPane>
